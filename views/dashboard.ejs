<div id="dashboard">
    <%Therapies.forEach(doc => { %>
    <%Medicines.forEach(m => { %>

        <% if(doc.medicine == m.product_name) { %>

            <article id="dishbord-article">

            <div class="icon-wrap <%= (Medicines.drug_type == "Tablet") ? "icon-wrap-purple" : "icon-wrap-yellow" %>">
                    
                    <img src="<%= (Medicines.drug_type == "Tablet") ? "../assets/img/pill.svg" : "../assets/img/syringe.svg" %>" alt="drug-icon">
        
                    <small class="<%= (Medicines.drug_type == "Tablet") ? "dark-purple" : "dark-yellow" %>"><%= Medicines.inventory %></small>
                </div>

                <div class="TheName">
                    <h2><a href="/single-therapie/<%= doc.id %>"><%= doc.therapy_name %></a></h2>

                    <p class="PR"><a href="/single-med/<%= m.id %>"><%= m.product_name %></a></p>
                    <p class="PR"><%= doc.rhythm %> <%= doc.meal[0] %></p>
                </div>

                <div class="mml">
                        <p><%= m.inventory %></p>
                    </div>

                   

            
          
                <form method="POST" action="/medicine-update/<%=m._id%>/<%=m.inventory%>?_method=UPDATE">
                    <button type="submit"><i class="fas fa-check"></i></button>
                </form>
            
           

            </article>
        <% } %>
    <%})%>          
    <%})%>
        </div>

